<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/White"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kush.galgotias.blindcoding">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Blind Coding"

        android:textColor="@color/White"
        android:background="@color/Maroon"

        android:textSize="30dp"

        android:textStyle="italic|bold"
        android:gravity="center_horizontal"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Event Description"
        android:id="@+id/textView7"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" This is an individual event. \nFor the event a candidate has to type the program with screen off in turbo compiler.
\nThe game can consist of two round.\n\n

Round 1 : It consist of 5 question whose program has to be typed within a time limit of 30 min.\n
Those who will write the program with minimum number of error are qualified for the round 2.\n\n

Round 2: It consist of 3 questions within a time limit or whose ever will do it first will be declared as a winner.\n\n

â€¢	Specific rules will be followed for qualifying the rounds and to handle the situation of a tie.\n"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Event Organiser"
        android:id="@+id/textView9"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"

        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="\nShubham Kumar : 9696565171\n\n
  Pratibha Raj Singh : 9810896991\n"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
</ScrollView>