<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/White"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.kush.galgotias.spotdbug">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="2dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Click 'n' Create"

            android:textColor="@color/White"
            android:background="@color/Maroon"

            android:textSize="30dp"

            android:textStyle="italic|bold"
            android:gravity="center_horizontal"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Event Description"
            android:id="@+id/textView7"
            android:textStyle="bold|italic"
            android:gravity="center_horizontal"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="\nWant to turn special moments into stunning posters!!!
\nWell we bring to you a perfect combination of photograph and poster. We call it Click Create. Click your best photo and then present your ability to create poster from it. Letâ€™s see who does the best.
\nSkill Required: Poster making skills, and photography.

\n\nRules:
\nThe event involves photography and poster making using any camera and using any type of software on laptops.
\n1. The participants are required to bring their own camera and laptop; extensions will be provided for charging.
\n2. During the event first 1hour are fixed for photography and next 1hour and 30 min will be for poster making.
\n3. A particular theme will be given in the starting of the event on which participants has to click the photos and make poster.
\n4. Participants are allowed to add at most 10 numbers of photos.
\n5. If any participant does not have the software it will be provided to them.
\n\n
Scoring:-
\n1. Photography and picture selection on the basis of theme provided.
\n2. Poster designing on the basis of theme.
\n3. At the end 3 posters will be awarded 1st, 2nd and 3rd rank on basis of certain criteria.

\nTeam members: 2-3 members"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Event Organiser"
            android:id="@+id/textView9"
            android:textStyle="bold|italic"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"

            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Akshit (+91 7275225773)"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true" />



    </RelativeLayout>
</ScrollView>