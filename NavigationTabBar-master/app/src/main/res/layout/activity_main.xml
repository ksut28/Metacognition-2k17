<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/White">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
       />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:id="@+id/imageView4"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="Metacognition 2017, the technical fiesta of Galgotias College of Engineering and Technology is a collaboration of cognitive minds coming together and preparing a platform for budding technocrats to show their mettle and sparkle with their awe-inspiring innovative ideas and research oriented talents. Held annually at the institution, this year it's bigger than it has ever been and while much of the festival has evolutionized, the idea remains to ideate.\n\nThe motto remains too, and along with it the legacy in which we invite everyone to be a part of. So rewire your robots, setup your devices and place a pin on the calendar for what will be one of the most memorable technical journeys of your life.

"
        android:layout_marginLeft="10dp"
        android:textColor="@color/Black"
        android:background="@color/White"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DIVE INTO THE FEST"
        android:textColor="@color/Cyan"
        android:shadowColor="@color/Black"
        android:background="@color/DarkGray"
        android:textColorHighlight="@color/Black"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:onClick="click" />


</LinearLayout>
</ScrollView>
